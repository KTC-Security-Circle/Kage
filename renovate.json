{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting"
  ],
  "dependencyDashboard": false,
  "branchPrefix": "renovate/",
  "timezone": "Asia/Tokyo",
  "rebaseWhen": "behind-base-branch",
  "automerge": true,
  "assignees": [
    "snow7y"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "schedule": [
    "* 0-23 * * *"
  ],
  "major": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "flet"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        ".*\\.toml$"
      ],
      "matchStrings": [
        "langchain-openvino-genai = \\{[^}]*tag = \"(?<currentValue>[^\"]+)\"[^}]*\\}"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "KTC-Security-Circle/langchain-openvino-genai"
    }
  ]
}